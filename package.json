{
  "name": "McIntosh-DAP",
  "version": "2.6.3",
  "description": "McIntosh-Reference-Digital-Audio-Player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Yohann Zaoui",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.HDSoundSystem.McIntoshDAP",
    "productName": "McIntosh-DAP",
    "win": {
      "icon": "assets/img/favicon.ico",
      "target": "portable"
    },
    "fileAssociations": [
      { "ext": "mp3",  "name": "MP3 Audio",  "description": "MP3 Audio File"  },
      { "ext": "flac", "name": "FLAC Audio", "description": "FLAC Audio File" },
      { "ext": "wav",  "name": "WAV Audio",  "description": "WAV Audio File"  },
      { "ext": "m4a",  "name": "M4A Audio",  "description": "M4A Audio File"  },
      { "ext": "aac",  "name": "AAC Audio",  "description": "AAC Audio File"  },
      { "ext": "ogg",  "name": "OGG Audio",  "description": "OGG Audio File"  },
      { "ext": "mp4",  "name": "MP4 Audio",  "description": "MP4 Audio File"  }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
